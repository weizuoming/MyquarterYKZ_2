<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/otherreg"
    android:orientation="vertical"
    tools:context="com.example.hello.myquarterykz.view.activity.YanZhengMiMaActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/xreg_back"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/left_jiantou" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


    </LinearLayout>

    <ImageView
        android:id="@+id/xreg_black"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:src="@drawable/reg_middle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/other_login_background"
        android:orientation="vertical">

        <EditText
            android:id="@+id/xreg_name"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="@null"
            android:hint="旧密码"
            android:textColorHint="#999"
            android:textDirection="@null" />

        <EditText
            android:id="@+id/xreg_pwd"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="@null"
            android:hint="新密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColorHint="#999"
            android:textDirection="@null" />

    </LinearLayout>

    <Button
        android:id="@+id/xreg_start"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#f7bf6a"
        android:textColor="#fff"
        android:text="修改" />



</LinearLayout>

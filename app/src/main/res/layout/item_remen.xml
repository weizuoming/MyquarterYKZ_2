<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_yuan"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        app:actualImageScaleType="centerCrop"
        app:roundAsCircle="true"/>

    <TextView
        android:id="@+id/text_title"
        android:text="123"
        android:textColor="#E51C23"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/sdv_yuan"
        android:layout_marginBottom="-10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_time"
        android:text="123"
        android:textColor="#E51C23"
        android:layout_toRightOf="@id/sdv_yuan"
        android:layout_below="@id/text_title"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/floating_ActionsMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_alignParentRight="true"
        fab:fab_icon="@drawable/ic_add_circle_black_24dp"
        app:fab_expandDirection="left"
        app:fab_addButtonSize="mini">
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/detailed_action_share"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:fab_icon="@drawable/pinbi"
            app:fab_size="mini"
            fab:fab_title="分享" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/detailed_action_like"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:fab_icon="@drawable/copylink1"
            fab:fab_colorNormal="@color/icons"
            fab:fab_colorPressed="@color/divider"
            app:fab_size="mini"
            fab:fab_title="收藏" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/detailed_action_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fab:fab_colorNormal="@color/icons"
            app:fab_icon="@drawable/tanhao"
            fab:fab_colorPressed="@color/divider"
            app:fab_size="mini"
            fab:fab_title="设置" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>


    <TextView
        android:id="@+id/text_cont"
        android:layout_below="@id/sdv_yuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="111"/>

    <cn.jzvd.JZVideoPlayerStandard
        android:id="@+id/jzvideoPlayerStandard"
        android:layout_marginTop="10dp"
        android:layout_below="@id/text_cont"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="200dp">

    </cn.jzvd.JZVideoPlayerStandard>
    <TextView
        android:id="@+id/text_cont1"
        android:layout_below="@id/jzvideoPlayerStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="222"/>
    <TextView
        android:id="@+id/text_cont2"
        android:layout_below="@id/text_cont1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="333"/>
</RelativeLayout>